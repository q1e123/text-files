# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status
    font pango:monospace 9

	colors {
        background $color_black
        separator $color_green
        #                  border      		 background        	 text
        focused_workspace  $color_black 	 $color_purple_light   	 $color_black
        inactive_workspace $color_black		 $color_grey_dark	 $color_grey_light
        urgent_workspace   $color_black	      	 $color_red	  	 $color_black
    }
}

